{
  "name": "astar-railway-backend",
  "version": "1.0.0",
  "description": "ASTAR* Backend for Railway (PostgreSQL backup)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd .. && npm install && npm run build",
    "build:backend": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "node dist/db/migrate.js",
    "db:sync": "node dist/db/sync-from-d1.js",
    "db:seed": "node dist/db/seed.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
