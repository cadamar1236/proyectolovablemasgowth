# Configuración de APIs para el Agente de Marketing
# Copia este archivo como .env y configura tus claves API

# Groq API (requerido)
GROQ_API_KEY=tu_groq_api_key_aqui

# Apify API (opcional - para web scraping avanzado)
APIFY_API_TOKEN=tu_apify_api_token_aqui

# WebApp API
WEBAPP_API_URL=https://webapp.pages.dev/api
WEBAPP_API_TOKEN=

# Base de datos
DATABASE_URL=sqlite:///marketing_agents.db

# Configuración de modelos
GROQ_MODEL=llama3-8b-8192

# Puerto del servidor
PORT=8000